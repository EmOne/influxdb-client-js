  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--timeout",
        "15000",
        "--check-leaks",
        "--colors",
        "${workspaceRoot}/test/**/*.test.ts"
      ]
    }
  ]
}
